<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorAccent"
    android:orientation="horizontal"
    android:padding="@dimen/separation_haut">

    <ImageView
        android:id="@+id/profil_image"
        android:layout_width="@dimen/image_size"
        android:layout_height="@dimen/image_size"
        card_view:srcCompat="@color/colorAccent"
        android:layout_marginLeft="@dimen/padding_plus"/>

    <TextView
        android:id="@+id/text_info"
        android:layout_width="match_parent"
        android:layout_height="@dimen/t1_height"
        android:layout_marginStart="@dimen/start"
        android:layout_marginTop="@dimen/top"
        android:layout_marginEnd="@dimen/end"
        android:layout_toStartOf="@+id/imageButton_supr"
        android:layout_toEndOf="@+id/profil_image"
        android:text="TextView"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text16"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_invite"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/t2_height"
        android:layout_below="@+id/text_info"
        android:layout_marginStart="@dimen/start"
        android:layout_marginTop="@dimen/separation_5"
        android:layout_marginEnd="@dimen/end"
        android:layout_toStartOf="@+id/imageButton_supr"
        android:layout_toEndOf="@+id/profil_image"
        android:textSize="@dimen/text12"
        android:text="TextView" />

    <ImageButton
        android:id="@+id/imageButton_supr"
        android:layout_width="@dimen/image_size"
        android:layout_height="@dimen/image_size"
        android:layout_alignParentEnd="true"
        android:background="@color/colorAccent"
        android:layout_marginEnd="@dimen/padding_plus"
        android:layout_gravity="center"
        android:src="@drawable/ic_delete_white_24dp"/>

</RelativeLayout>

